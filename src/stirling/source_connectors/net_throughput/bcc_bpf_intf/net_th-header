#pragma once

#define MAX_CMD_SIZE 32

struct ipv4_key_t {
    uint32_t pid;
    char name[MAX_CMD_SIZE];
    uint32_t saddr;
    uint32_t daddr;
    uint16_t lport;
    uint16_t dport;
};

struct ipv6_key_t {
    unsigned __int128 saddr;
    unsigned __int128 daddr;
    uint32_t pid;
    char name[MAX_CMD_SIZE];
    uint16_t lport;
    uint16_t dport;
    uint64_t __pad__;
};

